@{
    ViewBag.Title = "搜索";
    Layout = "~/Views/_LayoutMaster.cshtml";
}

<!--ftop开始-->
<div class="ftop">
    <div class="index_search index_search01" style="padding-left: 10px;">
        <div>
            <input type="text"  id="search" placeholder="请输入您要搜索的产品">
            <input type="button" name="button" value="">
        </div>
    </div>
    <div style="clear: both;"></div>
</div>
<!--ftop结尾-->

<div class="search_result">
    <h2><span>历史搜索</span><img src="/Content/images/icon_028.png"></h2>
    <p><a href="#">膨化零食</a><a href="#">母婴</a><a href="#">卫生纸</a><a href="#">洗衣粉</a><a href="#">果蔬</a><a href="#">坚果</a><a href="#">粮油</a></p>
</div>
<div class="block_bg"></div>
<div class="prompt">
    <img src="/Content/images/img_011.jpg">
    <h2>确定要清除历史搜索记录？</h2>
    <p>
        <a class="cancel">取消</a><a class="delete">删除</a>
    </p>
</div>
@section Script
{
    <script>
        $(function() {
            $(".search_result > h2 img").click(function() {
                $(".block_bg, .prompt").fadeIn();
            });
            $(".block_bg, .prompt p a.cancel, .prompt p a.delete").click(function() {
                $(".block_bg, .prompt").fadeOut();
            });
        });

        $(function() {
            $("input[name='button']").click(function() {
                var search = $('#search').val();
                if (search === "") {
                    alert("请输入搜索条件");
                    return;
                } else {
                    window.location = "@Url.Action("Search","ProductList")?key=" + search;
                }
            });
        });
    </script>
}