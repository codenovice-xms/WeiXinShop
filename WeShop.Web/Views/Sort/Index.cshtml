@model IEnumerable<WeShop.EFModel.Sort>
@{
    ViewBag.Title = "分类";
    Layout = "~/Views/_LayoutNav.cshtml";
}
@section Style
{
    <link href="~/Content/css/index.css" type="text/css" rel="stylesheet">
    <style>
         .border img{
             margin-top: 5px;
             border: 4px solid #ddd;
             border-radius: 50%;
         }
        .border img:hover{
            border: 4px solid #666;
            border-radius: 50%;
        }
    </style>
}

@section Script
{
    <script src="~/Scripts/index.js" type="text/javascript"></script>
    <script>
        $(".search_list ul li a img").each(function() {
            var w = $(this).width();
            $(this).height(w + "px");
        })
    </script>

}
<!--ftop开始-->
<div class="ftop">
    <div class="index_search index_search01">
        <a class="back" onClick="javascript:history.back(-1);"><img src="~/Content/images/icon_03.png"></a>
        <div>
            <input type="text" placeholder="请输入您要搜索的产品">
            <input class="dw" onclick="document.location='#'" type="button" value="">
        </div>
    </div>
    <div style="clear: both;"></div>
</div>
<!--ftop开始--> 
<div class="search_list">
    <ul>
        @foreach (var sort in Model)
        {
            <li class="border">
                <a href="@Url.Action("Index","ProductList",new {Code=sort.Code})">
                    <img src="~/Content/images/img_010.jpg">
                    <div class="search_item">
                        <p style="text-align: center">@sort.Name</p>
                    </div>
                </a>
            </li>
        }
    </ul>
</div>